<%= flash[:notice] %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました。
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h2>User info</h2>
  <table>
    <tbody>
      <tr>
        <th>名前</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>自己紹介</th>
        <th><%= current_user.introduction %></th>
      </tr>
      <tr>
        <td><%= link_to "edit", current_user %></td>
      </tr>
    </tbody>
  </table>
<h2>New book</h2>
<%= form_with model: @books, url: "/books", method: :post do |f| %>

  <div class="field">
    <p>本のタイトル</p>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <p>感想</p>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit "投稿" %>
  </div>
<% end %>
<!-- ここからindexの右側のページ -->
<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>本のタイトル</th>
      <th>感想</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

