<h2>User info</h2>
<table>
  <tbody>
    <tr>
      <td><%= image_tag @book.get_profile_image(100, 100) %></td>
    </tr>
    <tr>
      <th>名前</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>自己紹介</th>
      <th><%= current_user.introduction %></th>
    </tr>
    <tr>
      <td><%= link_to "edit", edit_user_path(current_user) %></td>
    </tr>
  </tbody>
</table>
<h2>New book</h2>
<%= form_with model: @book, url: "/books", method: :post do |f| %>

  <div class="field">
    <p>本のタイトル</p>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <p>感想</p>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit "投稿" %>
  </div>
<% end %>


<!-- ここからindexの右側のページ -->
<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>本のタイトル</th>
      <th>感想</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
      <%= link_to book_path(boo_path.id) do %>
        <td><%= book.title %></td>
      <% end %>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>

