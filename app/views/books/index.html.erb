<%= flash[:notice] %>
  <% if @book.errors.any? %>
    <%= @book.errors.count %> 件のエラーが発生しました。
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
  <% end %>
<%= render 'list',user: @user, books: @books  %>
<!-- ここからindexの右側のページ -->
<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>本のタイトル</th>
      <th>感想</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

