
<h2>New book</h2>
<%= form_with model: @books, url: "/books", method: :post do |f| %>

  <div class="field">
    <p>本のタイトル</p>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <p>感想</p>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit "投稿" %>
  </div>
<% end %>

<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td>
        <%= image_tag @book.user.get_profile_image(100, 100) %><br />
        <%= link_to @book.user.name %>
      </td>
      <td><%= link_to @book.title, book_path(@book)  %></td>
      <td><%= @book.body %></td>
      <% if @book.user_id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "削除してよろしいですか？" %></td>
      <% end %>
    </tr>
  </tbody>
</table>
