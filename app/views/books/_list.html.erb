<h2>New book</h2>
<%= form_with model: books, url: "/books", method: :post do |f| %>

  <div class="field">
    <p class="mb-2">本のタイトル</p>
    <%= f.text_field :title, class: "col-11 border rounded" %>
  </div>

  <div class="field">
    <p class="mb-2 mt-3">感想</p>
    <%= f.text_area :body, class: "col-11 border rounded" %>
  </div>

  <div class="actions">
    <%= f.submit "Create Book", class: "btn btn-success" %>
  </div>
<% end %>