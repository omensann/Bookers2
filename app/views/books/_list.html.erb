<h2>User info</h2>
<table>
  <tbody>
    <%= image_tag current_user.get_profile_image(100, 100) %>
    <tr>
      <th>名前</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>自己紹介</th>
      <th><%= current_user.introduction %></th>
    </tr>
    <tr>
      <td><%= link_to "edit", edit_user_path(current_user) %></td>
    </tr>
  </tbody>
</table>
<h2>New book</h2>
<%= form_with model: books, url: books_path, method: :post do |f| %>

  <div class="field">
    <p>本のタイトル</p>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <p>感想</p>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit "投稿" %>
  </div>
<% end %>