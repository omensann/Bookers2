<h2>Editing Book</h2>
<div class="errors">
  <% if @book.errors.any? %>
    <h3><%= @book.errors.count %>errors are occurring</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <div class="field">
    <p>本のタイトル</p>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <p>感想</p>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

  <%= link_to "Show", book_path(@book) %> <!--inline-blockにして横並びに変更-->
  <p>|</p>
  <%= link_to "Back", books_path %>
