
<%= @user.name %>
<h2>New book</h2>
<%= form_with model: @books, url: "/books", method: :post do |f| %>

  <div class="field">
    <p>本のタイトル</p>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <p>感想</p>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit "投稿" %>
  </div>
<% end %>
<table>
  <h2>Books</h2>
  <thead>
    <tr>
      <th>本のタイトル</th>
      <th>感想</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>