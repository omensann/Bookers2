<div class="container">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table table-striped">
        <tbody>
          <tr>
            <th>名前</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>自己紹介</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <%= link_to edit_user_path(@user.id), class: "col-12 btn btn-outline-secondary btn-sm mt-3" do %>
        <i class="fa-solid fa-user-cog"></i>
      <% end %>
      <%= render 'books/list', books: @books %>
    </div>
    <div class="col-1"></div>
    <div class="col-8 ">
      <table class="table table-striped">
        <h2>Books</h2>
        <thead>
          <tr>
            <th></th>
            <th>本のタイトル</th>
            <th>感想</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>