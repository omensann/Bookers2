<h2>User info</h2>
<table>
  <tbody>
    <tr>
      <td><%= image_tag @user.get_profile_image(100,100) %></td>
    </tr>
    <tr>
      <th>名前</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>自己紹介</th>
      <th><%= @user.introduction %></th>
    </tr>
    <tr>
      <td><%= link_to edit_user_path(current_user.id) %>
        <i class="fa-solid fa-user-gear"></i>
      </td>
    </tr>
  </tbody>
</table>
<%= render 'books/list', books: @books %>
<table>
  <h2>Books</h2>
  <thead>
    <tr>
      <th>本のタイトル</th>
      <th>感想</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>