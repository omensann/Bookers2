<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/7035d8ece7.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class=" flex-colum vh-100">
    <header class="bg-dark text-white pt-3 pb-2 mb-5">
      <div class="container">
        <div class="row">
          <div class="col-xl-10 mx-auto">
            <h4>
              <%= link_to "Bookers", top_path, class: "text-white" %>
            </h4>
          </div>
          <ul class="list-unstyled">
          <% if user_signed_in? %>
            <li>
              <%= link_to user_path(current_user.id), class: "text-white" do %>
                <i class="fa-solid fa-house-chimney">Home</i>
              <% end %>
            </li>
            <li>
              <%= link_to "Users", users_path, class: "text-white" %>
            </li>
            <li>
              <%= link_to "Books", books_path, class: "text-white" %>
            </li>
            <li>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "text-white" %>
            </li>
          </ul>
          <% else %>
            <li>
              <%= link_to top_path, class: "text-white" do %>
                <i class="fa-solid fa-house-chimney"></i><p>Home</p>
              <% end %>
            </li>
            <li>
              <%= link_to about_path, class: "text-white" do %>
                <i class="fa-solid fa-link"></i><p>About</p>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path, class: "text-white" do %>
                <i class="fa-solid fa-user-plus"></i><p>Sign up</p>
              <% end %>
            </li>
            <li>
              <%= link_to user_session_path, class: "text-white" do %>
                <i class="fa-solid fa-right-to-bracket"></i><p>Log in</p>
              <% end %>
            </li>

          <% end %>
          </ul>
        </div>
      </div>
    </header>

    <div>
      <%= flash[:notice] %>
    </div>
    <main>
      <%= yield %>
    </main>
    <footer class="bg-light">
      <div class="container">
        <div class="row">
          <div class="col-2 mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>

</html>
